
<div class="container">
    <div class="row">
        <div class="col col-md-12">
            <h1>CourseOff Script</h1>
            <a class="btn btn-primary" href="/init">Scrape data</a>
            <br /><br />
            
            <div class="alert alert-info">
                Scrape data takes about a minute to run. Even after it has run,
                it takes a while for sqlite to insert all the records into the 
                database. So, clicking on buttons like "Select all semesters"
                will only work after all the initial insertions are complete.
            </div>
            
            <div class="btn-group">
                <a class="btn btn-default" id="select-semester-btn" 
                    href="javascript:void" data-query="select * from semester;">
                    Select all semesters
                </a>
                <a class="btn btn-default" id="select-class-btn" 
                    href="javascript:void" data-query="select * from class;">
                    Select all classes
                </a>
                <a class="btn btn-default" id="select-section-btn" 
                    href="javascript:void" data-query="select * from section order by class_id;">
                    Select all sections
                </a>
                <a class="btn btn-default" id="select-timeslot-btn" 
                    href="javascript:void" data-query="select * from timeslot order by section_id;">
                    Select all timeslots
                </a>
            </div>
            <table id="table" class="table">
                <thead>
                    <tr></tr>
                </thead>
                <tbody>
                </tbody>
            </table>
        </div>
    </div>
</div>

<script>
    $(document).ready(function() {
        var selectButtons = [$('#select-semester-btn'), $('#select-class-btn'),
            $('#select-section-btn'), $('#select-timeslot-btn')];
        $.each(selectButtons, function(i, btn) {
            $(btn).click(function() {
                $.each(selectButtons, function(i, btn) {
                   btn.attr('disabled', true); 
                });
                var query = $(this).attr('data-query');
                $.ajax({
                    url: '/select?query=' + query,
                }).success(function(data) {
                    var thead = $('#table').find('thead').find('tr');
                    var tbody = $('#table').find('tbody');
                    // Clear previous data
                    thead.find('th').remove();
                    tbody.find('td').remove();
                    $.each(data[0], function(name, value) {
                        thead.append('<th>' + name + '</th>');
                    });
                    $.each(data, function(i, obj) {
                        tbody.append('<tr></tr>');
                        $.each(obj, function(name, value) {
                            tbody.append('<td>' + value + '</td>');
                        });
                    }); 
                }).done(function(data) {  
                    $.each(selectButtons, function(i, btn) {
                        btn.attr('disabled', false); 
                    });
                }); 
            }); 
        });
    });
</script>
