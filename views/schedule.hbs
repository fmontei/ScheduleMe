<div class="container">
    <div class="row">
        <div class="col col-md-5">
            <h3><u>Classes</u></h3>
            
            <!--List selected classes-->
            <div class="panel panel-default"
                 ng-repeat="class in selectedClasses">
              <div class="panel-body">
                  \{{class.course_number}} <em>\{{class.name}}</em>
              </div>
            </div>
            
            <div class="btn-group">
                <label class="btn btn-default" 
                       ng-model="radioModel" 
                       uib-btn-radio="'Add Class'"
                       data-toggle="modal"
                       data-target="#class-modal">
                       Add Class
                </label>
                <label class="btn btn-default" 
                       ng-model="radioModel" 
                       uib-btn-radio="'Add Group'"
                       data-toggle="modal" data-target="#group-modal">
                       Add Group
                </label>
            </div>
        </div>
        
        <div class="col col-md-2">
        </div>
        
        <div class="col col-md-5">
            <h3><u>Criteria</u></h3>
        </div>
    </div>
</div>

<div ng-controller="ModalCtrl">
    <div class="modal fade" id="class-modal" tabindex="-1" role="dialog" aria-labelledby="class-modal-label">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" 
                            class="close" 
                            aria-label="Close" 
                            data-dismiss="modal" 
                            ng-click="resetModal()">
                        <span aria-hidden="true">&times;</span>
                    </button>
                    <h4 class="modal-title" id="myModalLabel">Modal title</h4>
                </div>
                
                <div class="modal-body">
                    <div class="row">
                        <div class="col col-md-4">
                            <label><u>Department</u></label>
                        </div>
                        <div class="col col-md-8">
                            <select class="form-control"
                                    ng-model="modalData.selectedDept"
                                    ng-change="filterClassesByDept()">
                                <option ng-repeat="dept in allDepartments">\{{dept}}</option>
                            </select>
                        </div>
                    </div> <!--./row-->
                    <br />
                    <div class="row">
                        <div class="col col-md-4">
                            <label><u>Class</u></label>
                        </div>
                        <div class="col col-md-8">
                            <select class="form-control"
                                    ng-model="modalData.selectedClass">
                                <option ng-repeat="class in modalData.filteredClasses">
                                    \{{class.course_number}} (\{{class.name}})
                                </option>
                            </select>
                        </div>
                    </div> <!--./row-->
                </div>
                
                <div class="modal-footer">
                    <button type="button" 
                            class="btn btn-default" 
                            ng-click="resetModal()"
                            data-dismiss="modal">
                            Close
                    </button>
                    <button type="button" 
                            class="btn btn-primary"
                            ng-disabled="!modalData.selectedDept || !modalData.selectedClass"
                            ng-click="selectClass()"
                            data-dismiss="modal">
                        Add Class
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

